<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTarefasXamarin.Paginas.EditarTarefa">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Edição de tarefa" FontSize="20" HorizontalOptions="Center" FontAttributes="Bold" />
                <Entry x:Name="Nome" Placeholder="Nome" />
                <Label Text="Descrição da tarefa" />
                <Editor x:Name="Descricao" HeightRequest="100" />

                <Picker x:Name="pickerPrioridade"
                    Title="Selecione a Prioridade"
                    TextColor="Blue"
                    SelectedIndexChanged="ActionMudarIndex"
                >
                    <Picker.Items>
                        <x:String>Urgente</x:String>
                        <x:String>Alta</x:String>
                        <x:String>Média</x:String>
                        <x:String>Baixa</x:String>
                    </Picker.Items>
                </Picker>


                <Button Text="Salvar" Clicked="SalvarAction"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>